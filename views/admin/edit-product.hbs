<section>
    <div class="container">
        <div class="col-md-6 pt-5">
            <h1  class="mb-3 ">Add Product</h1>

            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{product.name}}">
                </div>
                <div class="form-group">
                    <label for="discription">Discription</label>
                    <input type="text" class="form-control" id="discription" name="discription" value="{{product.discription}}">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="{{product.price}}">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                     <img src="/product-images/{{product._id}}.jpg" style="width: 40px;height:40px;" alt="Image not load" id="imageView">
                    <input type="file" name="image" class="form-control" onchange="viewImage(event)">
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
            </form>

        </div>
    </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
    }
</script>